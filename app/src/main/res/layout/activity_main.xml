<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/application_main_background" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_marginStart="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/view"
        app:layout_constraintStart_toStartOf="@+id/view"

        app:srcCompat="@drawable/back" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:text="Putatoe Wallet"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/view"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="48dp"
        tools:layout_editor_absoluteY="21dp"
        android:layout_marginTop="50dp"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="0dp"
            >

            <View
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:background="@color/application_main_background" />

            <View
                android:id="@+id/view4"
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:layout_marginTop="120dp"
                android:background="@drawable/two_curve_corner"
                app:layout_constraintTop_toTopOf="@+id/view2"
                tools:layout_editor_absoluteX="16dp" />


            <View
                android:id="@+id/four_round"
                android:layout_width="0dp"
                android:layout_height="160dp"
                android:layout_marginTop="41dp"
                android:background="@drawable/four_round_corner"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/view2"
                app:layout_constraintWidth_percent="0.9" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="29dp"
                android:layout_marginTop="20dp"
                android:text="₹ 0.0"
                android:textStyle="bold"
                android:textColor="@color/background_white"
                android:textSize="35dp"
                app:layout_constraintStart_toStartOf="@+id/four_round"
                app:layout_constraintTop_toTopOf="@+id/four_round" />

            <TextView

                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="17dp"
                android:text="Available Balance"
                android:textColor="@color/background_white"
                android:textSize="15dp"
                app:layout_constraintStart_toStartOf="@+id/four_round"
                app:layout_constraintTop_toBottomOf="@+id/textView2" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="95dp"
                android:background="@drawable/circle"
                android:gravity="center"
                android:text="P"
                android:textColor="@color/background_white"
                android:textSize="20dp"
                app:layout_constraintStart_toStartOf="@+id/four_round"
                app:layout_constraintTop_toTopOf="@+id/four_round" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="13dp"
                android:layout_marginTop="95dp"
                android:text="505"
                android:textColor="@color/background_white"
                android:textSize="25dp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/textView4"
                app:layout_constraintTop_toTopOf="@+id/four_round" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:text="Reward Points"
                android:textColor="@color/background_white"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/four_round"
                app:layout_constraintTop_toBottomOf="@+id/textView5" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="83dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/round_btn"
                android:padding="5dp"
                android:text="Transfer Money"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/four_round"
                app:layout_constraintTop_toTopOf="@+id/four_round" />


            <View
                android:id="@+id/view3"
                android:layout_width="0dp"
                android:layout_height="76dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/reward_box"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/four_round"
                app:layout_constraintWidth_percent="0.95" />

            <TextView
                android:textSize="13dp"
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100 reward points = 1 putatoe credit"
                app:layout_constraintStart_toStartOf="@+id/view3"
                app:layout_constraintTop_toTopOf="@+id/view3"
                android:textStyle="bold"
                android:textColor="@color/background_white"
                android:paddingTop="3dp"
                android:paddingLeft="4dp"
                />

            <TextView
                android:paddingLeft="4dp"
                android:textStyle="bold"
                android:textColor="@color/background_white"
                android:paddingTop="3dp"
                android:textSize="13dp"
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 putatoe credit = 1 rupee"
                app:layout_constraintStart_toStartOf="@+id/view3"
                app:layout_constraintTop_toBottomOf="@+id/textView8" />

            <TextView
                android:paddingLeft="4dp"
                android:textStyle="bold"
                android:textColor="@color/background_white"
                android:paddingTop="3dp"
                android:textSize="14dp"
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Can be redeemed to your bank account on amount above ₹ 10,000"
                app:layout_constraintBottom_toBottomOf="@+id/view3"
                app:layout_constraintStart_toStartOf="@+id/view3"
                app:layout_constraintTop_toBottomOf="@+id/textView9" />

            <View
                android:id="@+id/view5"
                android:layout_width="0dp"
                android:layout_height="82dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/money"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/view4"
                app:layout_constraintTop_toBottomOf="@+id/textView11"
                app:layout_constraintWidth_percent="0.92" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="82dp"
                android:layout_height="82dp"
                app:layout_constraintBottom_toBottomOf="@+id/view5"
                app:layout_constraintEnd_toEndOf="@+id/view5"
                app:layout_constraintStart_toStartOf="@+id/view5"
                app:srcCompat="@drawable/gift" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="82dp"
                android:layout_height="82dp"
                app:layout_constraintBottom_toBottomOf="@+id/view5"
                app:layout_constraintEnd_toEndOf="@+id/view5"
                app:srcCompat="@drawable/bank" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="82dp"
                android:layout_height="82dp"
                app:layout_constraintBottom_toBottomOf="@+id/view5"
                app:layout_constraintStart_toStartOf="@+id/view5"
                app:srcCompat="@drawable/rs" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="110dp"
                android:text="Transactions"
                android:textColor="@color/application_main_background"
                android:textSize="20dp"
                app:layout_constraintStart_toStartOf="@+id/view4"
                app:layout_constraintTop_toTopOf="@+id/view5" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="410dp"
                android:text="NO PAST TRANSACTIONS"
                android:textSize="25dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/view4" />


            <View
                android:layout_width="match_parent"
                android:layout_height="460dp"
                android:layout_marginTop="500dp"
                android:background="@color/application_main_background"
                app:layout_constraintTop_toTopOf="@+id/view4"
                tools:layout_editor_absoluteX="0dp" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="wrap_content"
                android:layout_height="410dp"
                android:layout_marginTop="440dp"
                app:layout_constraintTop_toTopOf="@+id/view4"
                app:srcCompat="@drawable/animation"
                tools:layout_editor_absoluteX="0dp" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>





</androidx.constraintlayout.widget.ConstraintLayout>